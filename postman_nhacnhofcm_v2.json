							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData && jsonData.token) {",
									"    pm.environment.set(\"auth_token\", jsonData.token);",
									"    pm.environment.set(\"user_id\", jsonData.record.id);",
									"    console.log(\"✓ Token: \" + jsonData.token.substring(0,20) + \"...\");",
